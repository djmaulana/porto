-- Calculate total spending for each customer
SELECT
    customer_id,
    SUM(amount) AS total_spent
FROM
    transactions
GROUP BY
    customer_id;

-- Identify customer segments based on total spending
SELECT
    customer_id,
    CASE
        WHEN total_spent >= 1000 THEN 'High-Value Customer'
        WHEN total_spent >= 500 THEN 'Mid-Value Customer'
        ELSE 'Low-Value Customer'
    END AS segment
FROM
    (
        SELECT
            customer_id,
            SUM(amount) AS total_spent
        FROM
            transactions
        GROUP BY
            customer_id
    ) AS customer_segments;

-- Calculate average order value for each customer segment
SELECT
    segment,
    AVG(total_spent) AS average_order_value
FROM
    (
        SELECT
            customer_id,
            CASE
                WHEN total_spent >= 1000 THEN 'High-Value Customer'
                WHEN total_spent >= 500 THEN 'Mid-Value Customer'
                ELSE 'Low-Value Customer'
            END AS segment
        FROM
            (
                SELECT
                    customer_id,
                    SUM(amount) AS total_spent
                FROM
                    transactions
                GROUP BY
                    customer_id
            ) AS customer_segments
    ) AS segments
GROUP BY
    segment;
